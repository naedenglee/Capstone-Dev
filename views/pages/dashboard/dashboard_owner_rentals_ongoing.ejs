<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="/assets/dashboard_orders.css">
	<title>Order Page</title>
</head>
<body>
	<!-- SIDEBAR -->
    <%- include ('dashboard_sidebar') -%>
    
	<section id="content">
		<nav>
			<i class='bx bx-menu toggle-sidebar' ></i>
			<form action="#">
				<div class="form-group">
				</div>
			</form>
			<a href="#" class="nav-link">
				<i class='bx bxs-bell icon' ></i></a>
			<div class="profile">
				<img src="/images/system_images/user.png" alt="">
				<ul class="profile-link">
					<li><a href="#"><i class='bx bxs-user-circle icon' ></i> Account</a></li>
					<li><a href="#"><i class='bx bxs-cog' ></i>Settings</a></li>
					<li><a href="#"><i class='bx bxs-log-out-circle' ></i> Logout</a></li>
			</div>
		</nav>
		<div class="dash-content">
            <div class="overview">
                <div class="title">
			<h1 class="title">Ongoing Rentals (For Lessors)</h1>
			</div>
      <% if(result.length == 0) { %>
        <h2 style="text-align:center">You have no ongoing rentals/transactions as a lessor</h2>
      <% }else if(result) { %>
		<div class="boxes"  style="overflow-x:auto;">
            <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col"><input type="button" onclick='selects()' value="✓"/><input type="button" onclick='deSelect()' value="✕"/>   </th>
                    <th scope="col">ID</th>
                    <th scope="col">Client</th>
                    <th scope="col">Item Name</th>
                    <th scope="col">Rental Date</th>
                    <th scope="col">Return Date</th>
                    <th scope="col">Days Remaining</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Status</th>
                    <th scope="col">Last Update</th>
                    <th scope="col">Action (buttons to update status)</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% result.forEach(function(rental){ %>
                      <tr>
                        <th scope="row"><input type="checkbox" name="chk" value="1"></th>
                        <td id="id"><%= rental.rental_id %> </td>
                        <td id="client"><%= rental.customer_id %></td>
                        <td id="itemName"><%= rental.item_name %></td>
                        <td id="rentalDate"><%= rental.rental_date %></td>
                        <td id="returnDate"><%= rental.return_date %></td>
                        <td id="remainingDays"><%= rental.days_remaining %></td>
                        <td id="qty"><%= rental.rental_quantity %></td>
                        <td id="totalAmount"><%= rental.total_amount %></td>
                        <td id="status"><%= rental.rental_status %></td>
                        <td id="lastUpdate">November 7, 2022 12:00:00PM</td>
                        <td id="action"><div class="p-1">
                          <% if(rental.rental_status == null){ %>
                            <button class="btn btn-primary button-1" data-bs-toggle="modal" data-bs-target="#updateConfirmModal" id="buttonVal" value="0" data-id="1" onclick="updateBtnFunc(12)">Item Delivered to Client</button><br>
                          <% } else if(rental.rental_statu == 3) { %>
                              <button class="btn btn-primary button-1"data-bs-toggle="modal" data-bs-target="#updateConfirmModal" id="buttonVal" value="3" data-id="2" onclick="updateBtnFunc(12)">Item Returned</button><br>
                          <% } else if(rental.rental_statu == 4){ %>
                            <button class="btn btn-primary button-1" data-bs-toggle="modal" data-bs-target="#finishTransactionModal" id="buttonVal" value="4" data-id="2" onclick="updateBtnFunc(12)" data-id="1">Release Funds(Security Deposit)</button><br>
                              <button class="btn btn-primary button-1" data-id="1">Damaged Item</button><br>
                          <% } else { %>
                              <span>No Available Action</span>
                          <% } %>
                          <p id="status" class="py-1"></p>
                        </div></td>
                        <td id="action"><div class="p-1">
                          <button class="btn btn-primary button-1" data-bs-toggle="modal" data-bs-target="#applyExtensionModal" id="extensionButtonVal" onclick="applyExtensionFunc(<%= rental.rental_id %>, <%= rental.inventory_id %>)">Apply for Extension</button>
                        <p id="status" class="py-1"></p>
                      </div></td>
                      </tr>
                    <% }) %>     
                    
                    <% } %>
                </tbody>
              </table>
		</div>
	</section>

  <!-- UPDATE MODAL -->
  <form action="/tryTable" method="post">
    <div class="modal fade" id="updateConfirmModal" tabindex="-1" aria-labelledby="updateConfirmModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateConfirmModalLabel">UPDATE STATUS</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            You are about to update the status for order number <span id="orderNum" value=""></span>. Proceed?
            <input type="hidden" name="buttonVal" id="buttonValModal" value="">
            <input type="hidden" name="orderId" id="reservationIdHidden" value="">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            <button type="submit" class="btn btn-primary">Yes</button>
          </div>
        </div>
      </div>
    </div>      
  </form>

  <!-- FINISHING OF TRANSACTION MODAL -->
  <form action="/tryTable" method="post">
    <div class="modal fade" id="finishTransactionModal" tabindex="-1" aria-labelledby="finishTransactionModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateConfirmModalLabel">Rental End</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            The item for rental ID number <span id="orderNum" value=""></span> has been returned successfully. Release the security deposit now?
            <input type="hidden" name="buttonVal" id="buttonValModal" value="">
            <input type="hidden" name="orderId" id="reservationIdHidden" value="">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            <button type="submit" class="btn btn-primary">Yes</button>
          </div>
        </div>
      </div>
    </div>      
  </form>


	<script src="/assets/scripts/dashboard_orders.js"></script>
</body>

<script>
  function updateBtnFunc(num){
        buttonValModal = document.getElementById("buttonValModal");
        buttonVal = document.getElementById("buttonVal");
        status = buttonVal.value
        buttonValModal.setAttribute("value", status);
        console.log(status)

        orderNum = document.getElementById("orderNum");
        orderNum.textContent = num;

        reservationId = document.getElementById("reservationIdHidden");
        reservationId.setAttribute("value", num);
    }
</script>

</html>