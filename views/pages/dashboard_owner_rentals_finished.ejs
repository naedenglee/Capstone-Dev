<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="/assets/dashboard_orders.css">
	<title>Order Page</title>
</head>
<body>
	<!-- SIDEBAR -->
    <%- include ('dashboard_sidebar') -%>
    
	<section id="content">
		<nav>
			<i class='bx bx-menu toggle-sidebar' ></i>
			<form action="#">
				<div class="form-group">
				</div>
			</form>
			<a href="#" class="nav-link">
				<i class='bx bxs-bell icon' ></i></a>
			<div class="profile">
				<img src="/images/system_images/user.png" alt="">
				<ul class="profile-link">
					<li><a href="#"><i class='bx bxs-user-circle icon' ></i> Account</a></li>
					<li><a href="#"><i class='bx bxs-cog' ></i>Settings</a></li>
					<li><a href="#"><i class='bx bxs-log-out-circle' ></i> Logout</a></li>
			</div>
		</nav>
		<div class="dash-content">
            <div class="overview">
                <div class="title">
			<h1 class="title">Finished Rentals (For Lessors)</h1>
			</div>
		<div class="boxes"  style="overflow-x:auto;">
            <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col"><input type="button" onclick='selects()' value="✓"/><input type="button" onclick='deSelect()' value="✕"/>   </th>
                    <th scope="col">ID</th>
                    <th scope="col">Purchase Point</th>
                    <th scope="col">Purchase Date</th>
                    <th scope="col">Bill-to Name</th>
                    <th scope="col">Ship-to Name</th>
                    <th scope="col">Grand Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row"><input type="checkbox" name="chk" value="1"></th>
                    <td class="id">000012</td>
                    <td class="address">San Mateo, Rizal</td>
                    <td class="Pdate">October 3, 2022</td>
                    <td class="btName">Ivan Kyle</td>
                    <td class="stName">Ivan Kyle</td>
                    <td class="gtotal">₱ 1,099.00</td>
                    <td class="status">Pending</td>
                    <td class="startdate">November 4, 2022 12:00:00AM</td>
                    <td class="enddate">November 7, 2022 12:00:00PM</td>                    
                  </tr>
                  <tr>
                    <th scope="row"><input type="checkbox" name="chk" value="2"></th>
                    <td class="id">000013</td>
                    <td class="address">Marikina City</td>
                    <td class="Pdate">October 10, 2022</td>
                    <td class="btName">Richelieu T</td>
                    <td class="stName">Richelieu T</td>
                    <td class="gtotal">₱ 879.00</td>
                    <td class="status">Pending</td>
                    <td class="startdate">November 8, 2022 12:00:00AM</td>
                    <td class="enddate">November 10, 2022 12:00:00PM</td>
                  </tr>
                  <tr>
                    <th scope="row"><input type="checkbox" name="chk" value="3"></th>
                    <td class="id">000014</td>
                    <td class="address">Manila, City</td>
                    <td class="Pdate">October 20, 2022</td>
                    <td class="btName">Yanna Mari</td>
                    <td class="stName">Robert Delim</td>
                    <td class="gtotal">₱ 2,979.00</td>
                    <td class="status">Pending</td>
                    <td class="startdate">November 20, 2022 12:00:00AM</td>
                    <td class="enddate">November 28, 2022 12:00:00PM</td>
                  </tr>
                </tbody>
              </table>
		</div>
	</section>

  <!-- UPDATE MODAL -->
  <form action="/tryTable" method="post">
    <div class="modal fade" id="updateConfirmModal" tabindex="-1" aria-labelledby="updateConfirmModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateConfirmModalLabel">UPDATE STATUS</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            You are about to update the status for order number <span id="orderNum" value=""></span>. Proceed?
            <input type="hidden" name="buttonVal" id="buttonValModal" value="">
            <input type="hidden" name="orderId" id="reservationIdHidden" value="">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            <button type="submit" class="btn btn-primary">Yes</button>
          </div>
        </div>
      </div>
    </div>      
  </form>

  <!-- FINISHING OF TRANSACTION MODAL -->
  <form action="/tryTable" method="post">
    <div class="modal fade" id="finishTransactionModal" tabindex="-1" aria-labelledby="finishTransactionModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateConfirmModalLabel">Rental End</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            The item for rental ID number <span id="orderNum" value=""></span> has been returned successfully. Release the security deposit now?
            <input type="hidden" name="buttonVal" id="buttonValModal" value="">
            <input type="hidden" name="orderId" id="reservationIdHidden" value="">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            <button type="submit" class="btn btn-primary">Yes</button>
          </div>
        </div>
      </div>
    </div>      
  </form>


	<script src="/assets/scripts/dashboard_orders.js"></script>
</body>

<script>
  function updateBtnFunc(num){
        buttonValModal = document.getElementById("buttonValModal");
        buttonVal = document.getElementById("buttonVal");
        status = buttonVal.value
        buttonValModal.setAttribute("value", status);
        console.log(status)

        orderNum = document.getElementById("orderNum");
        orderNum.textContent = num;

        reservationId = document.getElementById("reservationIdHidden");
        reservationId.setAttribute("value", num);
    }
</script>

</html>