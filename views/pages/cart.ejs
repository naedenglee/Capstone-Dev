<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- favicon -->
    <link rel="shortcut icon" href="img/favlogo.ico" type="image/x-icon">
    <link rel="icon" href="img/favlogo.ico" type="image/x-icon">

    <title>Mang Hiram | Cart</title>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

  <!-- prices jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<link href="/assets/cart.css" rel="stylesheet">
</head>
<body>
<!-- Navigation -->
<%- include ('navbar') -%>
  <!-- end nav-->
    <div class="wrapper" style="margin-top: 100px;">
		<div class="project">
			<div class="shop">                

                <% result.forEach(function(item){ %>
                    <form action="/cart/remove/<%= item.cart_id %>" method="post">
                        <a href="/items/view/<%= item.item_id %>" style="text-decoration: none; color: #000;">
                        <div class="form-check" >
                                <div class="box">
                                    <img src="<%= item.image_path %>">
                                    <div class="content">
                                        <h4><%= item.item_name %></h4>
                                        <h5>₱<span for="check-<%= item.cart_id %>"><%= item.rental_rate %></span> (Per Day)</h5>
                                        <button type="submit">
                                            <p class="btn-area">
                                            <i aria-hidden="true" class="fa fa-trash"></i>
                                            <span class="btn2">Remove</span>
                                            </p>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            </a>
                    </form>                    
                  <% }) %>

			</div>
		</div>
	</div>
</body>

<script>
    $(".form-check").on("click", "input:checkbox", function () {
    var $this = $(this);
    var $total = $("#subtotal");
    var $target = $("span[for='" + $this.attr("id") + "']");
    
    var item_value = +($target.html().replace("₱", "") || 0);
    var cur_total = +($total.html().replace("₱", "") || 0);
    
    if ($this.prop("checked") === true) {
        cur_total += item_value;
    } else {
        cur_total -= item_value;
    }
    
    $total.html("₱" + cur_total);
});
</script>
</html>
